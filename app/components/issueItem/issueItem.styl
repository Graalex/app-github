.issue-item
	background #fff
	box-shadow 1px 1px 2px #cacaca
	border #cacaca 1px solid
	border-radius 2px

	&:hover
		border #979797 1px solid
		box-shadow 1px 1px 4px #868686

	&-header
		display flex
		flex-direction row
		justify-content flex-start
		align-items stretch
		height 40px
		line-height 40px
		background #dfdfdf
		border-bottom #cdcdcd

		&__status
			flex-shrink 0
			display inline-block
			padding 10px
			width 40px
			border-radius 50%

			&--opened
				background url("/assets/icons/opened.png") no-repeat center center

			&--closed
				background url("/assets/icons/closed.png") no-repeat center center

		&__title
			flex-grow 1
			padding-left 1rem
			margin 0

	&-owner
		display flex
		flex-direction row
		justify-content flex-start
		align-items stretch
		padding 5px
		height 80px
		line-height 80px

		&__avatar
			display inline-block
			width 80px
			border-radius 50%
			overflow hidden

		&__img
			width 100%

		&__name
			display inline-block
			flex-grow 1
			padding-left 1rem
			font-size 110%
			font-weight 700

		&__profile
			display inline-block
			padding-right 1rem
			text-align right
			width 150px

	&-footer
		display flex
		flex-direction row
		justify-content space-between
		align-items stretch
		padding 5px
		height 30px
		line-height 30px
		font-size 90%
		font-style italic
		background #dfdfdf
		border-top #cdcdcd

		&__created
			display inline-block

		&__closed
			display inline-block

		&__more
			display inline-block
			text-align right

