.issue-item
	background #fff
	box-shadow 1px 1px 3px #555
	border-radius 3px
	padding .5rem

	&:hover
		border #5E740B 1px solid

	&-header
		display flex
		flex-direction row
		justify-content flex-start
		align-items stretch
		height 50px
		line-height 50px

		&__status
			flex-shrink 0
			display inline-block
			padding 10px
			width 30px
			border-radius 50%

			&--opened
				color #3C510C

			&--closed
				color #880000

		&__title
			flex-grow 1
			padding-left 1rem
			margin 0

	&-owner
		display flex
		flex-direction row
		justify-content flex-start
		align-items stretch
		padding 5px
		height 70px
		line-height 70px

		&__avatar
			display inline-block
			width 70px
			border-radius 50%
			overflow hidden

		&__img
			width 100%

		&__name
			display inline-block
			flex-grow 1
			padding-left 1rem
			font-size 110%
			font-weight 700

		&__profile
			display inline-block
			padding-right 1rem
			text-align right
			width 150px

	&-footer
		display flex
		flex-direction row
		justify-content space-between
		align-items stretch
		padding 5px
		height 40px
		line-height 40px
		font-size 90%
		font-style italic

		&__created
			display inline-block

		&__closed
			display inline-block

		&__more
			display inline-block
			text-align right

