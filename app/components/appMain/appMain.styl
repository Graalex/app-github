.page
	display flex
	flex-direction column
	justify-content space-between
	min-height 100%
	width 1460px
	margin 0 auto
	border-left #dcdcdc 1px solid
	box-shadow 1px 1px 2px #e0e0e0

.page-header
	display flex
	flex-direction row
	justify-content flex-start
	align-items stretch
	background #e0e0e0
	border-bottom #a0a0a0 1px solid
	background url("/assets/icons/github.svg") no-repeat center center

	&__logo
		max-width 150px

	&__img
		width 100%

	&__title
		margin 0
		flex 1 0 auto
		line-height 150px
		padding-left 2em

.page-main
	display flex
	flex-direction row
	justify-content flex-start
	align-items stretch
	flex 1 0 auto

.page-search
	max-width 320px
	min-width 40px
	width 40px
	overflow hidden
	background #bdbdbd
	border-right #9b9b9b 1px solid
	box-shadow 0 1px 2px #9b9b9b
	transition width .75s cubic-bezier(0.39, 0.575, 0.565, 1)

	&--expanded
		width 320px

.page-content
	flex 1 1 auto
	background #fafafa
	padding .5rem

.page-footer
	height 50px
	line-height 50px
	background #e0e0e0
	border-top #a0a0a0 1px solid

	&__summary
		font-weight 700
		text-align center
