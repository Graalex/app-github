.page
	display flex
	flex-direction column
	justify-content space-between
	min-height 100%
	width 1460px
	margin 0 auto
	border-left #dcdcdc 1px solid
	box-shadow 1px 1px 2px #e0e0e0

.page-header
	height 70px
	line-height 70px
	background #e0e0e0
	border-bottom #a0a0a0 1px solid

	&__title
		margin 0
		text-align center

.page-main
	display flex
	flex-direction row
	justify-content space-between
	align-items stretch
	flex 1 0 auto
	min-height 100%
	height 100%

.page-search
	width 300px
	overflow hidden
	background #bdbdbd
	border-right #9b9b9b 1px solid
	box-shadow 0 1px 2px #9b9b9b

.page-content
	flex 1 0 auto
	background #fafafa

.page-footer
	height 70px
	line-height 70px
	background #e0e0e0
	border-top #a0a0a0 1px solid

	&__summary
		font-weight 700
		text-align center
